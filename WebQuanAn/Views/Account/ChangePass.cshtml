@model ChangePassVM

<style>
	.bg-top {
		padding-top: 20px;
		padding-bottom: 20px;
	}
</style>
<!-- breadcrumbs area start -->
<div class="breadcrumbs_aree breadcrumbs_bg mb-110" data-bgimg="/client-site/assets/img/others/bg-top.png">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="bg-top breadcrumbs_text">
					<h1>Đổi mật khẩu</h1>
					<ul>
						<li><a asp-action="Index" asp-controller="Home">Trang chủ </a></li>
						<li> // Đổi mật khẩu</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<div id="colorlib-contact">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<ul class="list-group">
						<li class="list-group-item"><a asp-action="Profile" asp-controller="Account">Thông tin</a></li>
						<li class="list-group-item"><a asp-action="Update" asp-controller="Account">Cập nhật thông tin</a></li>
						<li class="list-group-item"><a asp-action="ChangePass" asp-controller="Account">Đổi mật khẩu</a></li>
						<li class="list-group-item"><a asp-action="Logout" asp-controller="Account">Đăng xuất</a></li>
					</ul>
				</div>
			</div>
			<div class="col-md-8">

				<div class="contact-wrap config-form">
                    <form method="post">
                        <div class="login-form">
							<h3>Thông tin</h3>
                            <div class="row">
                                <div class="col-md-12 col-12">
									<label for="fname">Mật khẩu hiện tại:</label>
									<input type="password" asp-for="CurrentPass" class="form-control">
									<span asp-validation-for="CurrentPass"></span>                                 
                                </div>
                                <div class="col-md-12 col-12">
									<label for="fname">Mật khẩu mới:</label>
									<input type="password" asp-for="NewPass" class="form-control">
									<span asp-validation-for="NewPass"></span>
                                </div>              
                                <div class="col-md-12">
									<label for="fname">Nhập lại mật khẩu:</label>
									<input type="password" asp-for="ComfirmPass" class="form-control">
									<span asp-validation-for="ComfirmPass"></span>
                                </div>     
								<div class="col-12">
									<button type="submit" class="btn custom-btn md-size">Cập nhật</button>
								</div>
                            </div>
                        </div>
                    </form>
				</div>
			</div>
		</div>
	</div>
</div>



