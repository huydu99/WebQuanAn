@model LoginVM
<style>
    .bg-top {
        padding-top: 20px;
        padding-bottom: 20px;
    }
</style>
<!-- breadcrumbs area start -->
<div class="breadcrumbs_aree breadcrumbs_bg mb-110" data-bgimg="/client-site/assets/img/others/bg-top.png">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bg-top breadcrumbs_text">
                    <h1>Đăng nhập</h1>
                    <ul>
                        <li><a asp-action="Index" asp-controller="Home">Trang chủ </a></li>
                        <li> // Đăng nhập</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs area end -->
<div class="login-register-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Đăng nhập</h4>
                        <span class="text-danger">@ViewBag.Error</span>
                        <div class="row">
                            <div class="col-lg-12">
                                <label>Tài khoản*</label>
                                <input type="text" class="form-control" asp-for="UserName" placeholder="Tài khoản">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12">
                                <label>Password</label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Mật khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-sm-8 align-self-center">
                                <div class="check-box">
                                    <input value="true" type="checkbox" id="remember_me">
                                    <label for="remember_me">Nhớ mật khẩu</label>
                                </div>
                            </div>
                            <div class="col-sm-4 pt-1 mt-md-0">                           
                            </div>
                            <div class="col-lg-12 pt-3">
                                <button type="submit" class="btn custom-btn md-size">Đăng nhập</button>
                            </div>
                            <div class="col-lg-12 pt-3">
                                <div class="forgotton-password_info">
                                    <span> Bạn chưa có tài khoản? <a asp-action="Register" asp-controller="Account" asp-area="Customer">Đăng ký</a></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
