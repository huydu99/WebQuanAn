@model RegisterVM
<style>
    .bg-top {
        padding-top: 20px;
        padding-bottom: 20px;
    }
</style>
<!-- breadcrumbs area start -->
<div class="breadcrumbs_aree breadcrumbs_bg mb-110" data-bgimg="/client-site/assets/img/others/bg-top.png">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bg-top breadcrumbs_text">
                    <h1>Đăng ký</h1>
                    <ul>
                        <li><a asp-action="Index" asp-controller="Home">Trang chủ </a></li>
                        <li> // Đăng ký</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs area end -->
<div class="login-register-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 ">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Đăng ký</h4>
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <label>Họ*</label>
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="Họ">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 col-12">
                                <label>Tên*</label>
                                <input type="text" asp-for="LastName" class="form-control" placeholder="Tên">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Tài khoản*</label>
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Tài khoản">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Email*</label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label>Số điện thoại</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Số điện thoại">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label>Mật khẩu*</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Mật khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label>Nhập lại mật khẩu*</label>
                                <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="Nhập lại mật khẩu">
                                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label>Đại chỉ</label>
                                <input type="text" asp-for="Address" class="form-control" placeholder="Địa chỉ">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn custom-btn md-size">Đăng ký</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






