	}

	.add-to-cart-button {
		display: inline-block;
		padding: 10px 20px;
		font-size: 16px;
		font-weight: bold;
		text-align: center;
		text-decoration: none;
		color: #fff;
		background-color: #333333;
		border: none;
		border-radius: 30px;
		transition: background-color 0.3s ease;
		cursor: pointer;
		margin-left: 10px;
	}

		.add-to-cart-button:hover {
			background-color: #fc7c7c;
			.bg-top

	{
		padding-top: 20px;
		padding-bottom: 20px;
	}

	#mySelect {
		padding: 8px;
		border: 1px solid #ccc;
		border-radius: 4px;
		font-size: 14px;
		color: #333;
		background-color: #fff;
		width: 200px;
	}
		/* Tùy chỉnh option */
		#mySelect option {
			font-size: 14px;
			color: #333;
			background-color: #fff;
		}

	.col-md-12.pagination {
		display: flex;
		justify-content: center;
	}

